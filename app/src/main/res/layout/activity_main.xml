<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#041B72">

        <View
            android:id="@+id/maru_logo"
            android:layout_width="58dp"
            android:layout_height="56.83dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="-23.02dp"
            android:background="@drawable/icon" />

    </androidx.appcompat.widget.Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/nanumbarunhothicbold"
            android:text="maru42 님의 맞춤 뉴스"
            android:textColor="@color/black"
            android:textSize="25sp" />


        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edit_icon" />

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/main_tag1"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/suggest_word"
                android:elevation="10dp"
                android:fontFamily="@font/nanumbarunhothicbold"
                android:gravity="center"
                android:text="#코로나 19"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_tag2"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/suggest_word"
                android:elevation="10dp"
                android:fontFamily="@font/nanumbarunhothicbold"
                android:gravity="center"
                android:text="#패럴림픽"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_tag3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/suggest_word"
                android:elevation="10dp"
                android:fontFamily="@font/nanumbarunhothicbold"
                android:gravity="center"
                android:text="#갤럭시 S22"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_tag4"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/suggest_word"
                android:elevation="10dp"
                android:fontFamily="@font/nanumbarunhothicbold"
                android:gravity="center"
                android:text="#울진 산불"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/main_tag5"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/suggest_word"
                android:elevation="10dp"
                android:fontFamily="@font/nanumbarunhothicbold"
                android:gravity="center"
                android:text="#우크라이나"
                android:textColor="@color/black"
                android:textSize="12sp" />

        </LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/news_list_page"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>